{
  "compilerOptions": {
    "typeRoots": ["/node_modules/@types", "/node_modules"],
    "lib": ["es2015"],
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "allowJs": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"]
}
